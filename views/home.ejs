<% include partials/header %>
<% include partials/intro %>

<div class="showcase">
    <% if (projects.length === 0) { %>
      <h2>There are no projects!</h2>
      <% } else { %>
        <% projects.forEach(project => { %>
          <!-- <a href="/projects/<%= project._id %>" class='project'> -->
            <div class='project'>
              <a href="/projects/<%= project._id %>">
                <img src="<%= project.image %>" alt="peos">
              <p><%= project.title %></p>
              <% if (project.description.length > 100) { %>
                <p><small><%= project.description.slice(0, 97) + '...' %></small></p>
              <% } else {%>
                <p><small><%= project.description %></small></p>
              <% } %>
              </a>
              <!-- <a href="asd"><i class='icon eye'></i></a>
              <a href="asd"><i class='icon github'></i></a> -->
            </div>
          </a>
        <% }); %>
      <% } %>
</div>

<% include partials/footer %>